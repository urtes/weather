<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:text="@string/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/city"
            app:layout_constraintTop_toTopOf="@+id/viewpager_main" android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="36sp"
            android:textColor="@android:color/background_light"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/weather_icon"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/city"/>
    <TextView
            android:text="@string/weather_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/weather_conditions"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@android:color/background_light"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/weather_icon"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_conditions" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/detail_conditions"
            android:textColor="@android:color/background_light" android:textSize="24sp"/>
    <TextView
            android:text="@string/detail_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/detail_conditions"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/background_light"/>


</android.support.constraint.ConstraintLayout>